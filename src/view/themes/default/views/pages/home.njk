    </div>
  </div>
</section>

<!-- Testimonials Section -->
<section id="testimonials" class="py-20 bg-section-bg">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">What members say about us</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Testimonial cards here -->
    </div>
  </div>
</section>

<!-- FAQ Section -->
<section id="faq" class="py-20">
